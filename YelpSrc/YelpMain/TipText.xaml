<Window x:Class="Milestone1.TipText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="TipText" Height="500" Width="500">
    <Grid>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="61" Margin="44,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="395" TextChanged="textbox_TextChanged"/>
        <Button x:Name="submitButton" Content="Add Tip&#xA;" HorizontalAlignment="Left" Margin="44,76,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="submitButton_Click"/>
        <Label Content="Business Tips" HorizontalAlignment="Left" Margin="44,103,0,0" VerticalAlignment="Top" Height="26"/>
        <DataGrid x:Name="textGird" HorizontalAlignment="Left" Height="275" Margin="44,134,0,0" VerticalAlignment="Top" Width="395" SelectionChanged="DataGrid_SelectionChanged"/>

    </Grid>
</Window>
